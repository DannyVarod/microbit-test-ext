// A task runner that calls the PXT compiler and
{
    "version": "2.0.0",

    // The command is pxt. Assumes that PXT has been installed using npm install -g pxt
    "command": "pxt",

    "type": "shell",

    "options": {
        "shell": {
        }
    },

    "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
    },

    "tasks": [{
        "label": "deploy",
        "group": "build",
        "problemMatcher": "$tsc",
        "args": []
    }, {
        "label": "build",
        "group": "test",
        "problemMatcher": "$tsc",
        "args": []
    }]
    
}